<Window x:Class="ContractSystemClaimSystem3.LectureLogin1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractSystemClaimSystem3"
        mc:Ignorable="d"
        Title="LectureLogin1" Height="450" Width="800">
    <Grid Background="#ADD8E6">
        <!-- Email Label and TextBox -->
        <Label Content="Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,30,0,0"/>

        <!-- Password Label and PasswordBox -->
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,70,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,70,0,0"/>

        <!-- Login Button -->
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="150,120,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
