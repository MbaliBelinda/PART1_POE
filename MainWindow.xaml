<Window x:Class="ContractSystemClaimSystem3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContractSystemClaimSystem3"
        mc:Ignorable="d"
                Title="Contract Monthly Claim System" Height="350" Width="525">
    <Grid Background="#FF877C94">
        <!-- Title Label -->
        <Label Content="Contract Monthly Claim System"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="24"
               FontWeight="Bold"
               Margin="0,30,0,0"/>
        <!-- Get Started Button -->
        <Button Content="Get Started"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="150"
                Height="50"
                Click="GetStartedButton_Click"/>
    </Grid>
</Window>
